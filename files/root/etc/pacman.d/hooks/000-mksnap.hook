[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Package
Target = this-hook-is-disabled

[Action]
Description = Creating system snapshot
When = PreTransaction
Exec = /bin/bash -c "[ -d '/sys/firmware/efi' ] && /usr/bin/mksnap || echo Skipping mksnap on BIOS"
NeedsTargets
AbortOnFail
